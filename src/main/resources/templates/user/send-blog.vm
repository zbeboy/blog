<!DOCTYPE html>
<html>
<head>
    <title>0ng</title>

    <!-- meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- csrf -->
    <meta name="_csrf" content="$_csrf.token"/>
    <!-- default header name is X-CSRF-TOKEN -->
    <meta name="_csrf_header" content="$_csrf.headerName"/>

    <!-- css -->
    <link rel="stylesheet" href="/blog/css/bootstrap.min.css">
    <link rel="stylesheet" href="/blog/css/ionicons.min.css">
    <link rel="stylesheet" href="/blog/css/pace.css">
    <link rel="stylesheet" href="/blog/css/custom.css">
    <link rel="stylesheet" href="/blog/css/message/messenger.css">
    <link rel="stylesheet" href="/blog/css/message/messenger-theme-air.css">

    <!-- js -->
    <script src="/blog/js/jquery-2.1.3.min.js"></script>
    <script src="/blog/js/bootstrap.min.js"></script>
    <script src="/blog/js/pace.min.js"></script>
    <script src="/blog/js/modernizr.custom.js"></script>
    <script src="/blog/js/csrf.js"></script>
    <script src="/blog/js/message/messenger.min.js"></script>
</head>

<body id="page">
<div class="container">
    <header id="site-header">
        <div class="row">
            <div class="col-md-4 col-sm-5 col-xs-8">
                <div class="logo">
                    <h1><a href="/blog"><b>0 n</b>g</a></h1>
                </div>
            </div><!-- col-md-4 -->
            <div class="col-md-8 col-sm-7 col-xs-4">
                <nav class="main-nav" role="navigation">
                    <div class="navbar-header">
                        <button type="button" id="trigger-overlay" class="navbar-toggle">
                            <span class="ion-navicon"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="cl-effect-11"><a href="/blog" data-hover="Home">Home</a></li>
                            <li class="cl-effect-11"><a href="/blog/blog" data-hover="Blog">Blog</a></li>
                            <li class="cl-effect-11"><a href="/blog/about" data-hover="About">About</a></li>
                            <li class="cl-effect-11"><a href="/blog/contact" data-hover="Contact">Contact</a></li>
                            #if($is_login)
                                <li class="cl-effect-11"><a href="javascript:$('#logout').submit();"
                                                            data-hover="Logout">Logout</a></li>
                            #else
                                <li class="cl-effect-11"><a href="/blog/login" data-hover="Login">Login</a></li>
                            #end
                        </ul>
                        <form action="/blog/logout" method="POST" id="logout">
                            <input type="hidden" name="_csrf" value="$_csrf.token" />
                            <input type="submit" hidden="hidden"/>
                        </form>
                    </div><!-- /.navbar-collapse -->
                </nav>
                <div id="header-search-box">
                    <a id="search-menu" href="#"><span id="search-icon" class="ion-ios-search-strong"></span></a>
                    <div id="search-form" class="search-form">
                        <form role="search" method="get" id="searchform" action="/blog/search">
                            <input type="search" placeholder="Search" name="search" required>
                            <button type="submit"><span class="ion-ios-search-strong"></span></button>
                        </form>
                    </div>
                </div>
            </div><!-- col-md-8 -->
        </div>
    </header>
</div>

<div class="content-body">
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <div class="col-md-9 col-md-offset-1">
                    <form class="form-horizontal">
                        <div class="form-group" id="checkTitle">
                            <label for="title" class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title" name="title" placeholder="Title">
                                <p class="text-danger" id="titleError"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="type" class="col-sm-2 control-label">Type</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="type" name="type">
                                    #foreach($t in $type)
                                        <option value="$t.id">$t.typeName</option>
                                    #end
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-sm-2 control-label">Content</label>
                            <div class="col-sm-10">
                                <textarea class="content form-control" rows="3" name="content"
                                          placeholder="Content"></textarea>
                                <p class="text-danger" id="contentError"></p>
                            </div>
                        </div>
                        <div class="form-group" id="insertTag">
                            <div class="col-sm-offset-5 col-sm-10">
                                <button type="button" onclick="insertContent();" class="btn btn-info">Add content!
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-5 col-sm-10">
                                <button type="button" onclick="saveArticle();" class="btn btn-default">Save article!
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
</div>
<footer id="site-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="copyright">&copy; 2016 Zero Branch Earning.com</p>
            </div>
        </div>
    </div>
</footer>

<!-- Mobile Menu -->
<div class="overlay overlay-hugeinc">
    <button type="button" class="overlay-close"><span class="ion-ios-close-empty"></span></button>
    <nav>
        <ul>
            <li><a href="/blog">Home</a></li>
            <li><a href="/blog/blog">Blog</a></li>
            <li><a href="/blog/about">About</a></li>
            <li><a href="/blog/contact">Contact</a></li>
            #if($is_login)
                <li><a href="javascript:$('#logout').submit();">Logout</a></li>
            #else
                <li><a href="/blog/login">Login</a></li>
            #end
        </ul>
    </nav>
</div>

<script src="/blog/js/script.js"></script>
<script src="/blog/js/blog/send-blog.js"></script>

</body>
</html>
